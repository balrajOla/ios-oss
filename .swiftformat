# fileHeader
--header strip

# indent
--indent 2

# numberFormatting
--decimalgrouping 3

# redundantSelf
# Reference `self` explicitly
--self insert

# ranges
--ranges no-space

# trailingCommas
--commas inline

# unusedArguments
--stripunusedargs always

# wrapArguments
--wraparguments before-first
--wrapcollections before-first

# Disabled rules
--disable redundantInit,void

# Excluded files
--exclude bin,Carthage,Frameworks,Library/Styles/Colors.swift,Library/Strings.swift,vendor
